doctype html
html(lang='en')
  head
    title Registro de Ingresos
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='../css/bootstrap.min.css', rel='stylesheet')
    script(src='../js/jquery.min.js')
    script(src='../js/bootstrap.min.js')
    script(src='../js/app/ingresos.js')
    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#a92e2a; margin-bottom: 30px;")
      if roles === "Operador"
        a.btn.btn-info(href="/ingresos",style="background-color:#d84945; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#b33434; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e45d1c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
      else 
        a.btn.btn-info(href="/usuarios",style="background-color:#b33434; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios
        a.btn.btn-info(href="/ingresos",style="background-color:#d84945; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#b33434; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e45d1c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;color: #ec6a0d") Registro de Ingresos
    .row.justify-content-center
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form#listar-form
            .form-group
              input.form-control(type='text', id="titulo", name='titulo', placeholder='Titulo', autofocus='')
            .form-group
              input.form-control(type='text',id="descripcion", name='descripcion', placeholder='Descripción')
            .form-group
                label(style="color: #9c9999") Tipo de Ingreso
            .form-group
                input#contactChoice1(type='radio',class="ingreso", name='contact1',value="Normal")
                label(for='contactChoice1', style="margin-right: 60px;") Normal
                input#contactChoice2(type='radio', class="ingreso2",name='contact1', value="Destraccion")
                label(for='contactChoice2') Detracción
            .form-group
                 label(style="color: #9c9999") Tipo de Moneda
            .form-group
                input#contactChoice3(type='radio',class="moneda" name='contact2',value="Dolares")
                label(for='contactChoice3', style="margin-right: 58px;") Dolares
                input#contactChoice4(type='radio',class="moneda2" name='contact2',value="Soles")
                label(for='contactChoice4') Soles
            .form-group
              input.form-control(type='text',id="moneda", name='moneda', placeholder='Monto')
            .form-group
                label(style="color: #9c9999") Tipo de Documento
            .form-group
                input#contactChoice5(type='radio',class="documento", name='contact3',value="DNI")
                label(for='contactChoice5', style="margin-right: 90px;") Dni
                input#contactChoice6(type='radio',class="documento2", name='contact3',value="RUC")
                label(for='contactChoice6') Ruc
            .form-group
                label(style="color: #9c9999") Numero de Documento
            .form-group
              input.form-control(type='text',id="numerodocumento", name='numerodocumento', placeholder='Numero de Documento')
            .form-group
                label(style="color: #9c9999") Razon Social
            .form-group
              input.form-control(type='text',id="razon", name='razon', placeholder='Nombre o Razon Social')
            .form-group
                label(style="color: #9c9999") Numero de Cuenta
            .form-group
                select.selectpicker(name='cuenta',id="listacuenta")
                  option(value="" selected disabled)  Seleccione Cuenta
                  each lista in listacuenta
                    option(value=lista.numero_cuenta) #{lista.numero_cuenta}
            .form-group
                label(style="color: #9c9999") Tipo de Comprobante
            .form-group
              select.selectpicker(name='comprobante',id="Comprobante")
                option(value="" selected disabled) Seleccione Tipo de Comprobante
                option(value="Factura") Factura
                option(value="Boleta") Boleta
            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary#button-form-users(type='submit',style="background-color:#1f9bcf")
                  | Registrar