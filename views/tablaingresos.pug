    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
      
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#a92e2a; margin-bottom: 30px;")
      a.btn.btn-info(href="/tablausuarios",style="background-color:#b33434; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios
      a.btn.btn-info(href="//www.youtube.com/",style="background-color:#d84945; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
      a.btn.btn-info(href="//www.google.com/",style="background-color:#b33434; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;color: #ec6a0d") Registro de Ingresos
    .row.justify-content-center
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form(action='/tablausuarios', method='POST')
            .form-group
              input.form-control(type='text', id="titulo", name='titulo', placeholder='Titulo', autofocus='')
            .form-group
              input.form-control(type='text',id="descripcion", name='descripcion', placeholder='Descripci√≥n')
            .form-group
              input.form-control(type='text',id="tipo" ,name='tipo', placeholder='Tipo')
            .form-group
              input.form-control(type='text',id="moneda", name='moneda', placeholder='Tipo de Moneda')
            .form-group
              input.form-control(type='text',id="monto", name='monto', placeholder='Monto')
            .form-group
              input.form-control(type='text',id="tipodocumento", name='tipodocumento', placeholder='Tipo de Documento')
            .form-group
              input.form-control(type='text',id="numerodocumento", name='numerodocumento', placeholder='Numero de Documento')
            .form-group
              input.form-control(type='text',id="razon", name='razon', placeholder='Razon Social')
            .form-group
              input.form-control(type='text',id="destino", name='destino', placeholder='Cuenta de Destino')
            .form-group
              input.form-control(type='text',id="componente", name='componente', placeholder='Tipo de Componente')

            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary#button-form-users(type='submit',style="background-color:#1f9bcf")
                  | Registrar
    .row(style="margin-bottom: 65px;")
      .col-md-12( style="max-width: 80%; margin: 0 auto; overflow-x: scroll") 
        table.table.table-bordered.table-hover
          thead
            tr
              th Id
              th Titulo
              th Descripcion
              th Tipo
              th Tipo de Moneda
              th Fecha
              th Monto
              th Tipo de Documento
              th Numero de Documento
              th Razon Social
              th Cuenta de Destino
              th Tipo de Componente
          
          //
            each usuario in tablau
              tr
                td= usuario.nombre
                td= usuario.apellido
                td= usuario.correo
                td= usuario.rol
                td= usuario.estado
                td= usuario.fecha_creacion
                td= usuario.fecha_actualizacion
                td
                    a.btn.btn-info(href='/update/'+usuario.id,style="background-color:#4dbf4b") Edit
                    
                td 
                    a.listoconfirmar.btn.btn-danger(href='/delete/'+usuario.id) Delete
  
        

  
      
    