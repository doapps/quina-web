        small
          


    script(type="text/javascript").
      const 
            modalBtn = document.querySelector('.modal-btn'),
            modalBtnSpan = document.querySelector('.modal-btn span'),
            modalBtnSpanValue = modalBtnSpan.innerText;
            modalCnt  = document.querySelector('.modal-cnt');
      

      modalBtn.addEventListener('click', () => {
        modalCnt.classList.add('hide');

        if(modalBtnSpanValue === 'OK'){
          window.location.href ="/tablausuarios/";
        }else{
          window.location.href ="/login";
          
        }
      });


   




      
    
  