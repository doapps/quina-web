doctype html
html(lang='en')
  head
    title Registro de Ingresos
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='../css/bootstrap.min.css', rel='stylesheet')
    script(src='../js/jquery.min.js')
    script(src='../js/bootstrap.min.js')
    script(src='../js/app/gastos.js')
    script(src='../js/exportar-gastos.js')
    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#2196f3; margin-bottom: 30px;")
     if roles === "Operador"
        a.btn.btn-info(href="/ingresos",style="background-color:#03a9f4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/gastos",style="background-color:#00bcd4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
     else
        a.btn.btn-info(href="/usuarios",style="background-color:#03a9f4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios
        a.btn.btn-info(href="/ingresos",style="background-color:#03a9f4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/gastos",style="background-color:#00bcd4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;color:#03a9f4") Registro de Gastos
        a.btn.btn-info(href='/gastos/crear' style="margin-right: 30px;") Nuevo
        a.btn.btn-info(href='#', style="background-color:#4dbf4b" ,onclick="exceller()") Exportar a Excel
    .row(style="margin-bottom: 65px;")
      .col-md-12( style="max-width: 80%; margin: 0 auto; overflow-x: scroll") 
        table.table.table-bordered.table-hover#exportar
          thead
            tr
              th Titulo
              th Descripcion
              th Tipo
              th Tipo de Moneda
              th Monto
              th Modalidad
              th Comprobante
              th Titular
              th Numero de Cuenta 
              th Fecha Creacion
              th Fecha Actualizacion
              th Autor
              th Modificar
              th Eliminar
            each gastos in listagastos
              tr
                td= gastos.titulo
                td= gastos.descripcion
                td= gastos.tipo
                td= gastos.tipo_moneda
                td= gastos.monto
                td= gastos.modalidad
                td= gastos.comprobante
                td= gastos.titular
                td= gastos.numero_cuenta
                td= gastos.fecha_creacion
                td= gastos.fecha_actualizacion
                td= gastos.autor
                td
                    a.btn.btn-info(href='/gastos/editar/'+gastos.id,style="background-color:#4dbf4b") Editar
                    
                td 
                    a.gastos-buton.btn.btn-danger(href='/gastos/eliminar/'+gastos.id) Eliminar
        
