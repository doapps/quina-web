doctype html
html(lang='en')
  head
    title Registro de Usuarios
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://bootswatch.com/4/lux/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css', rel='stylesheet')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js')
    //- link(href='../css/signin.css', rel='stylesheet')
    script(src='../js/usuarios.js')
    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
      
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#28a745; margin-bottom: 30px;")
      a.btn.btn-info(href="/tablausuarios",style="background-color:#4dbf4b ; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios
      a.btn.btn-info(href="/tablaingresos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
      a.btn.btn-info(href="/logout",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
      p(style="margin-right: 20px; color: #f5f5f5;")=roles
      p(style="margin-right: 20px; color: #f5f5f5;")=nom
      p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;") Registro de Usuarios
    .row.justify-content-center
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form#create-form
            .form-group
              input.form-control(type='text', id="nombre", name='name', placeholder='Nombre', autofocus='')
            .form-group
              input.form-control(type='text',id="apellido", name='lastname', placeholder='Apellido')
            .form-group
              input.form-control(type='password',id="contra" ,name='contraseña', placeholder='Contraseña')
            .form-group
              input.form-control(type='email',id="email", name='correo', placeholder='Email')
            .form-group
              select.selectpicker(name='rol')
                option(value="Administrador") Administrador
                option(value="Operador") Operador
            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary#button-form-users(type='submit',style="background-color:#1f9bcf")
                  | Registrar
    .row(style="margin-bottom: 65px;")
      .col-md-12( style="max-width: 80%; margin: 0 auto; overflow-x: scroll") 
        table.table.table-bordered.table-hover
          thead
            tr
              th Nombre
              th Apellido
              th Correo
              th Rol
              th Estado
              th Fecha_creacion
              th Fecha_actualizacion 
              th Modificar
              th Eliminar
          tbody
            each usuario in tablau
              tr
                td= usuario.nombre
                td= usuario.apellido
                td= usuario.correo
                td= usuario.rol
                td= usuario.estado
                td= usuario.fecha_creacion
                td= usuario.fecha_actualizacion
                td
                    a.btn.btn-info(href='/update/'+usuario.id,style="background-color:#4dbf4b") Edit
                    
                td 
                    a.user-delete.btn.btn-danger(href='/delete/'+usuario.id) Delete
         
  
      
    
      
            
               
            
                
           
                      



    

      



      
      