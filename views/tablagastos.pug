        p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;color:#03a9f4") Registro de Gastos
    .row.justify-content-center
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form#gastoslistar
            .form-group
              input.form-control(type='text', id="titulo", name='titulo',placeholder='Titulo', autofocus='')
            .form-group
              input.form-control(type='text',id="descripcion", name='descripcion', placeholder='Descripción')
            .form-group
                label(style="color: #9c9999") Tipo de Ingreso
            .form-group
                input#contactChoice1(type='radio',class="ingreso", name='contact1',value="Normal")
                label(for='contactChoice1', style="margin-right: 60px;") Normal
                input#contactChoice2(type='radio', class="ingreso2",name='contact1', value="Destraccion")
                label(for='contactChoice2') Detracción
            .form-group
                 label(style="color: #9c9999") Tipo de Moneda
            .form-group
                input#contactChoice3(type='radio',class="moneda" name='contact2',value="Dolares")
                label(for='contactChoice3', style="margin-right: 58px;") Dolares
                input#contactChoice4(type='radio',class="moneda2" name='contact2',value="Soles")
                label(for='contactChoice4') Soles
            .form-group
              input.form-control(type='number',id="moneda",step="0.01", name='moneda', placeholder='Monto')
            .form-group
                label(style="color: #9c9999") Tipo de Modalidad
            .form-group
               select.selectpicker(name='modalidad',id="modalidadpago")
                option(value="" selected disabled)  Seleccione Modalidad de Pago
                option(value="factura") Efectivo
                option(value="boleta") Tarjeta
            .form-group
               label(style="color: #9c9999") Existencia de Comprobante
            .form-group
               input#contactChoice5(type='radio',class="Comprobante" name='contact3',value="Si")
               label(for='contactChoice3', style="margin-right: 58px;") Si
               input#contactChoice6(type='radio',class="Comprobante2" name='contact3',value="No")
               label(for='contactChoice4') No
            .form-group
               label(style="color: #9c9999") Titular de Cuenta
            .form-group
               select.selectpicker(name='titular',id="titularr")
                option(value="" selected disabled)  Seleccione al Titular
                each lista in listacuenta
                  option(value=lista.titular) #{lista.titular}
            .form-group
               label(style="color: #9c9999") Numero de Cuenta
            .form-group
              select.selectpicker(name='numeroCuenta',id ="Cuentanumero")
                option(value="" selected disabled)  Seleccione el Numero de Cuenta
                each lista in listacuenta
                  option(value=lista.numero_cuenta) #{lista.numero_cuenta}
            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary#button-form-users(type='submit',style="background-color:#1f9bcf")
                  | Registrar
    .row(style="margin-bottom: 65px;")
      .col-md-12( style="max-width: 80%; margin: 0 auto; overflow-x: scroll") 
        table.table.table-bordered.table-hover
          thead
            tr
              th Titulo
              th Descripcion
              th Tipo
              th Tipo de Moneda
              th Monto
              th Modalidad
              th Comprobante
              th Titular
              th Numero de Cuenta 
              th Fecha Creacion
              th Fecha Actualizacion
              th Autor
              th Modificar
              th Eliminar
            each gastos in listagastos
              tr
                td= gastos.titulo
                td= gastos.descripcion
                td= gastos.tipo
                td= gastos.tipo_moneda
                td= gastos.monto
                td= gastos.modalidad
                td= gastos.comprobante
                td= gastos.titular
                td= gastos.numero_cuenta
                td= gastos.fecha_creacion
                td= gastos.fecha_actualizacion
                td= gastos.autor
                td
                    a.btn.btn-info(href='/actualizargastos/'+gastos.id,style="background-color:#4dbf4b") Editar
                    
                td 
                    a.gastos-buton.btn.btn-danger(href='/eliminargastos/'+gastos.id) Eliminar
        

  
      
    