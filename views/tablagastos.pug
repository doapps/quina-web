     else
        a.btn.btn-info(href="/tablausuarios",style="background-color:#03a9f4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios
        a.btn.btn-info(href="/tablaingresos",style="background-color:#03a9f4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#00bcd4; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
