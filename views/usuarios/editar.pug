doctype html
html(lang='es')
  head
    title Edit
    meta(charset='utf-8')
    link(href='../../css/bootstrap.min.css', rel='stylesheet')
    script(src='../../js/jquery.min.js')
    script(src='../../js/bootstrap.min.js')
    script(src='../../js/app/usuariosEdit.js')
    style(type='text/css').
      .body-tables *{
        font-size: 15px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
      
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#a72857; margin-bottom: 30px;")
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 12px;font-size: 25px;font-weight: bold;") Editar Usuarios
    .row.justify-content-center
      
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form#editarUsuarios
            .form-group(style="margin-bottom: 16px")
            p(style="margin-bottom: 2px;color: #9c9999;") Nombre
            input.form-control(type='text', name='nombre', id="nombre", value=dato[0].nombre,  placeholder='Name', autofocus='')
            .form-group(style="margin-bottom: 16px")
              p(style="margin-bottom: 2px;color: #9c9999;") Apellido
              input.form-control(type='text', name='apellido',id="apellido",value=dato[0].apellido, placeholder='Address')
            .form-group(style="margin-bottom: 16px")
              p(style="margin-bottom: 2px;color: #9c9999;") Correo
              input.form-control(type='email', name='correo',id="email",value=dato[0].correo, placeholder='email')
            .form-group(style="margin-bottom: 16px")
              p(style="margin-bottom: 2px;color: #9c9999;") Rol
               select.selectpicker(name='rol')
                if dato[0].rol === "Operador"
                   option(value=dato[0].rol) #{dato[0].rol}
                   option(value="Administrador") Administrador
                else
                   option(value=dato[0].rol) #{dato[0].rol}
                   option(value="Operador") Operador
            .form-group(style="margin-bottom: 16px")
              p(style="margin-bottom: 2px;color: #9c9999;") Estado
              select.selectpicker(name='estado')
                if dato[0].estado === "Habilitado"
                  option(value=dato[0].estado) #{dato[0].estado}
                  option(value="Inhabilitado") Inhabilitado
                else
                  option(value=dato[0].estado) #{dato[0].estado}
                  option(value="Habilitado") Habilitado
                  
            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary(type='submit',style="background-color:#a72857")
                  | Editar
                a.btn.btn-primary(href="/usuarios",style="background-color:#d9534f;margin-left: 30px;") Salir
            
         
        