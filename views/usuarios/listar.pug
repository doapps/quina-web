    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
      
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#28a745; margin-bottom: 30px;")
     if roles === "Operador"
        a.btn.btn-info(href="/ingresos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
     else
        a.btn.btn-info(href="/usuarios",style="background-color:#4dbf4b ; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios 
        a.btn.btn-info(href="/ingresos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;") Registro de Usuarios
        a.btn.btn-info(href='/usuarios/crear', stle="background-color:#4dbf4b") Nuevo
    .row(style="margin-bottom: 65px;")
      .col-md-12( style="max-width: 80%; margin: 0 auto; overflow-x: scroll") 
        table.table.table-bordered.table-hover
          thead
            tr
              th Nombre
              th Apellido
              th Correo
              th Rol
              th Estado
              th Fecha creacion
              th Fecha actualizacion 
              th Modificar
              th Eliminar
          tbody
            each usuario in tablau
              tr
                td= usuario.nombre
                td= usuario.apellido
                td= usuario.correo
                td= usuario.rol
                td= usuario.estado
                td= usuario.fecha_creacion
                td= usuario.fecha_actualizacion
                td
                    a.btn.btn-info(href='/usuarios/editar/'+usuario.id,style="background-color:#4dbf4b") Editar
                    
                td 
                    a.user-delete.btn.btn-danger(href='/usuarios/eliminar/'+usuario.id) Eliminar
         
  
      
    
      
            
               
            
                
           
                      



    

      



      
      