doctype html
html(lang='en')
  head
    title Registro de Usuarios
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='../css/bootstrap.min.css', rel='stylesheet')
    script(src='../js/jquery.min.js')
    script(src='../js/bootstrap.min.js')
    script(src='../js/app/usuarios.js')
    style(type='text/css').
      .body-tables *{
        font-size: 14px;
      }
      .body-tables{
        overflow-x: hidden;
      }
      .form-group .btn-group{
        width: 100% !important;
      }
      
  body.body-tables
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#28a745; margin-bottom: 30px;")
     if roles === "Operador"
        a.btn.btn-info(href="/tablaingresos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
     else
        a.btn.btn-info(href="/usuarios",style="background-color:#4dbf4b ; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Usuarios 
        a.btn.btn-info(href="/tablaingresos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Ingresos
        a.btn.btn-info(href="/tablagastos",style="background-color:#3c763d; margin-right: 20px;border-color: rgba(255,255,255,.15);") Registros de Gastos
        a.btn.btn-info(href="/logout",style="background-color:#e4c21c; margin-right: 20px;border-color: rgba(255,255,255,.15);") Salir
        p(style="margin-right: 20px; color: #f5f5f5;")=roles
        p(style="margin-right: 20px; color: #f5f5f5;")=nom
        p(style="color: #f5f5f5;")=apelli
    .row.justify-content-center
      .col-md-6  
        a.navbar-brand(href='#', style="height: auto; margin-bottom: 15px;font-size: 24px;font-weight: bold;") Registro de Usuarios
    .row.justify-content-center
      .col-md-6(style="margin-bottom: 30px;")
        .card-body
          form#create-form
            .form-group
              input.form-control(type='text', id="nombre", name='name', placeholder='Nombre', autofocus='')
            .form-group
              input.form-control(type='text',id="apellido", name='lastname', placeholder='Apellido')
            .form-group
              input.form-control(type='email',id="email", name='correo', placeholder='Email')
            .form-group
              input.form-control(type='password',id="contra" ,name='contraseña', placeholder='Contraseña')
            .form-group
              select.selectpicker(name='rol',id="roles")
                option(value="" selected disabled) Seleccione el Rol
                option(value="Administrador") Administrador
                option(value="Operador") Operador
            .button-cnt.row.justify-content-center(style="padding-bottom: 35px; padding-top: 15px;")
                button.btn.btn-primary#button-form-users(type='submit',style="background-color:#1f9bcf")
                  | Registrar